<%-include("partials/header.ejs")-%> 
    <div class="container" style="width: 70%; margin-top:80px;">
        <div class="card" style="padding:16px">
            <h2> <%= thread.title %> </h2>
            <h5><%= thread.content %></h5>
        </div>
        <div style="margin-top: 40px; margin-bottom: 40px;">
            <% answer.forEach(answer =>{ %>
                <div class="card" style="padding:32px; margin: 16px;">
                    <%= answer.content %>
                </div>
            <%})%>
        </div>
        <div>
            <form method="POST" action="/saveAnswer" >
                <h4>Responda</h4>
                <input type="hidden" name="threadId" value="<%= thread.id %>">
                <textarea class="form-control" placeholder="Sua resposta" name="content" cols="30" rows="4"></textarea>
                <button type="submit" class="btn btn-success" id="btn01">Responder</button>
            </form>
        </div>
    </div>
<%-include("partials/footer.ejs")-%> 